{
  "name": "mercury",
  "displayName": "Mercury",
  "description": "Mercury language integration for VSCode",
  "version": "0.0.1",
  "publisher": "brendanzab",
  "repository": {
    "type": "git",
    "uri": "https://github.com/brendanzab/vscode-mercury.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mercury"
  ],
  "configuration": {
    "title": "",
    "properties": {
      "mercury.libraryPath": {
        "type": "string",
        "default": "${workspaceFolder}/../mercury/library",
        "description": "Path to the library source files. Used in providing docs and completions."
      }
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "mercury",
        "aliases": [
          "Mercury",
          "mercury"
        ],
        "extensions": [
          ".m",
          ".moo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mercury",
        "scopeName": "source.mercury",
        "path": "./syntaxes/mercury.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.34.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2"
  }
}
